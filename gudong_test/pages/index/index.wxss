/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  background-color: #f5f6fa;
  min-height: 100vh;
}

/* 用户信息和天气简报 */
.user-info-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.weather-info {
  text-align: right;
}

.temperature {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

.weather-desc {
  font-size: 24rpx;
  color: #666;
}

/* 饮水进度圆环 */
.water-progress-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.progress-circle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.progress-text {
  text-align: center;
  color: #fff;
}

.current {
  font-size: 48rpx;
  font-weight: bold;
}

.target {
  font-size: 32rpx;
  opacity: 0.8;
}

/* 快捷喝水按钮组 */
.quick-drink-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.drink-btn {
  flex: 1;
  margin: 0 10rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.drink-btn.custom {
  background: #f0f0f0;
  color: #666;
}

.other-drink-btn {
  width: 100%;
  background: #f0f0f0;
  color: #666;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

/* 提醒设置入口 */
.reminder-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.reminder-settings {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.picker {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}
