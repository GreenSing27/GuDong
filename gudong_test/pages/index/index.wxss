/* index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
}
.container {
  padding: 20rpx;
  background-color: #f5f6fa;
  min-height: 100vh;
}

.user-info-section, .water-progress-section, .quick-drink-section, .reminder-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.nickname { font-size: 32rpx; }

.weather-info {
  text-align: right;
}
.temperature {
  font-size: 36rpx;
  font-weight: bold;
}
.weather-desc {
  font-size: 24rpx;
}

.progress-circle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.progress-text {
  text-align: center;
  color: white;
}
.current {
  font-size: 48rpx;
  font-weight: bold;
}
.target {
  font-size: 32rpx;
  opacity: 0.8;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.drink-btn {
  flex: 1;
  margin: 0 10rpx;
  background: #4A90E2;
  color: white;
  padding: 20rpx 0;
  border-radius: 10rpx;
}
.drink-btn.custom {
  background: #f0f0f0;
  color: #666;
}
.other-drink-btn {
  width: 100%;
  background: #f0f0f0;
  color: #666;
  border-radius: 10rpx;
  padding: 20rpx 0;
}

.picker {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}
.custom-times {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.time-item {
  position: relative;
  background-color: #e0f0ff;
  color: #007aff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.delete-icon {
  color: red;
  font-weight: bold;
  margin-left: 10rpx;
  cursor: pointer;
}

