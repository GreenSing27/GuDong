.container {
  padding: 30rpx;
  background-color: #f5f6fa;
  min-height: 100vh;
}

/* 通用样式 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 饮品推荐部分 */
.drink-section {
  margin-bottom: 40rpx;
}

.drink-scroll {
  white-space: nowrap;
  margin: 0 -30rpx;
  padding: 0 30rpx;
}

.drink-card {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.drink-image {
  width: 100%;
  height: 200rpx;
}

.drink-info {
  padding: 20rpx;
}

.drink-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.drink-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 文章列表部分 */
.article-list {
  margin: 0 -30rpx;
}

.article-card {
  background: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.article-image {
  width: 100%;
  height: 300rpx;
}

.article-info {
  padding: 20rpx;
}

.article-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 饮品详情弹窗 */
.drink-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.ingredient-list {
  background: #f5f6fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
}

.step-list {
  counter-reset: step;
}

.step-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
} 