<view class="container">
  <!-- 个人信息输入表单 -->
  <view class="form-section">
    <view class="form-title">个人信息</view>
    <view class="form-item">
      <text class="label">体重(kg)</text>
      <input type="digit" value="{{weight}}" bindinput="onWeightInput" placeholder="请输入体重"/>
    </view>
    <view class="form-item">
      <text class="label">活动量</text>
      <picker mode="selector" range="{{activityLevels}}" value="{{activityIndex}}" bindchange="onActivityChange">
        <view class="picker">
          {{activityLevels[activityIndex]}}
        </view>
      </picker>
    </view>
    <view class="form-item">
      <text class="label">其他备注</text>
      <input type="idcard" value="{{descrip}}" bindinput="onDescrip" placeholder="请输入备注"/>
    </view>
  </view>
  
  <!-- 大模型推荐结果 -->
  <button type="primary" bindtap="getWaterAdvice">获取饮水建议</button>
  <view wx:if="{{loading}}">正在获取建议...</view>
  <view wx:if="{{loading}}">体重{{weight}}kg，活动水平为{{activityText}}，其他信息：{{descrip}}</view>
  <view wx:if="{{advice}}" class="advice">{{advice}}</view>

