/* 容器 */
.container {
  padding: 30rpx;
  background-color: #f5f6fa;
  min-height: 100vh;
}

/* 图标 */
.form-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

/* 表单区域 */
.form-section {
  width: 90%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单标题 */
.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 统一输入控件样式 */
.form-control {
  width: 100%;
  height: 80rpx;
  background: #f5f6fa;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* Picker 特殊处理 */
.picker {
  line-height: 80rpx;
}

/* 按钮区域 */
.calculate-section {
  margin-top: 30rpx;
}

/* 计算按钮 */
.calculate-btn {
  width: 100%;
  height: 88rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.calculate-btn[disabled] {
  background: #ccc;
}

.custom-btn {
  background-color: #4A90E2; /* 改为你想要的颜色 */
  color: #fff;
  font-size: 32rpx;
  margin-top: 30rpx;
}
/* 加载提示整体容器 */
.loading-tips {
  margin-top: 30rpx;
  padding: 20rpx;
  color: #4A90E2;
  font-size: 28rpx;
  line-height: 40rpx;
}
/* 每条加载信息 */
.loading-line {
  font-size: 24rpx;
  color: #888;
  line-height: 36rpx;
}

/* 建议结果卡片 */
.advice-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 提示框容器 */
.advice-box {
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  position: relative;
}

.advice-box::before {
  content: '💡D老师说：';
  position: absolute;
  left: 16rpx;
  top: 12rpx;
  font-size: 36rpx;  
}

/* 建议文本 */
.advice {
  font-size: 32rpx;
  line-height: 50rpx;
  color: #1a73e8;
  white-space: pre-wrap;
  padding-left: 12rpx;
}