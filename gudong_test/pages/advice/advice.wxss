/* pages/advice/advice.wxss */
.feedback-container {
  padding: 30rpx;
  background-color: #f7f4eb;
}
.header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f7f4eb;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  font-weight: bold;
  color: #020202;
  padding-left: 10rpx;
  border-left: 10rpx solid #050505;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 8rpx #fff0f6;
  
}

.input-group {
  margin-bottom: 30rpx;
}

.feedback-input,
.contact-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  border: 1rpx solid #ddd;
  background-color: #f7f4eb;
  box-sizing: border-box;
}

.contact-input {
  min-height: 80rpx;
}

.submit-btn {
  width: 100%;
  /* height: 88rpx; */
  background: #f7f4eb;
  color: #000000;
  /* #ff4d4f */
  border-radius: 44rpx;
  font-size: 32rpx;
  line-height: 30rpx;
  border: none;
  margin-right: 30rpx;
  margin-bottom: 10rpx; /* 图片和文字的间距 */
  /* 移除边框和阴影 */
  border: 6rpx solid #000;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
}

.tip {
  display: block;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.policy-link {
  display: inline-block;
  margin-top: 15rpx;
  color: #4A90E2;
  font-size: 28rpx;
}